@using OdeToFood.Core
@model Restaurant

<div class="p-0">
    <div class="p-1">
        <h3>@Model.Name</h3>
    </div>
    <div class="p-2">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="p-3">
        <td> <a asp-page="./Detail" asp-route-restaurantId="@Model.Id"><octicon symbol="Search"></octicon></a></td>
        <td> <a asp-page="./Edit" asp-route-restaurantId="@Model.Id"><octicon symbol="Pencil"></octicon></a></td>
        <td> <a asp-page="./Delete" asp-route-restaurantId="@Model.Id"><octicon symbol="Trashcan"></octicon></a></td>
    </div>
</div>