@page
@model ListModel
@{
}
@addTagHelper *, Octicons.TagHelper

<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <span class="input-group">
                <button class="btn-light">
                    <octicon symbol="Search"></octicon>
                </button>
            </span>
        </div>

    </div>
</form>
<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td> <a asp-page="./Detail" asp-route-restaurantId="@restaurant.Id"><octicon symbol="Search"></octicon></a></td>
        <td> <a asp-page="./Edit" asp-route-restaurantId="@restaurant.Id"><octicon symbol="Pencil"></octicon></a></td>
    </tr>
    }
</table>
<a asp-page=".\Edit" class="btn btn-primary">Add New</a>
<div>@Model.Message</div>